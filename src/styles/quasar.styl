@import './quasar.variables.styl'
@import '~quasar-styl'
@import './calc.height.styl'
// @import '~quasar-addon-styl'

.dms-transition-fast
    transition all 0.2s

.dms-transition
    transition all 0.5s

.dms-transition-slow
    transition all 1s

.dms-clear-padding
    padding 0 !important

.dms-clear-margin
    margin 0 !important

.dms-clear-flex
    flex none

.dms-clear-min-width
    min-width 0

    & *
        min-width 0 !important

.dms-clear-min-height
    min-height 0

    & *
        min-height 0 !important

.dms-clear-nav-bottom-line
  .q-tab__indicator
    height 0px !important

.dms-fullheight-dialog
    .q-dialog__inner
        padding 0 !important

.update-data-item
    transition all 1s
    display inline-block

.dms-color-lighter
    filter brightness(120%)

.dms-color-darker
    filter brightness(80%)


.text-cancel
    color $cancel !important
    color var(--q-color-cancel) !important

.bg-cancel
    background $cancel !important
    background var(--q-color-cancel) !important

.text-primary-text
    color $primary-text !important

.dms-hover-rising
    &:hover
        @extend .shadow-10

.dms-hover-light
    &:hover
        filter brightness(120%)

.dms-background-blur
    background hsla(0, 0%, 100%, 0.2)
    -webkit-backdrop-filter blur(5px)
    backdrop-filter blur(5px)

// 全局注入样式
body
    font-size 14px !important

    // ::-webkit-scrollbar 滚动条整体部分
    ::-webkit-scrollbar
        width 10px
        height 10px

    // ::-webkit-scrollbar-track  滚动条的轨道（里面装有Thumb）
    ::-webkit-scrollbar-track
        background-color $scrollbarTrack
        background-color var(--q-color-scrollbar-track)
        border-radius 2px

    // ::-webkit-scrollbar-thumb  滚动条里面的小方块
    ::-webkit-scrollbar-thumb
        border-radius 2px
        background-color $scrollbarThumb
        background-color var(--q-color-scrollbar-thumb)

        &:hover
            background-color $scrollbarHover
            background-color var(--q-color-scrollbar-hover)
